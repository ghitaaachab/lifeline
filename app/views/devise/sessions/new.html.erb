<%= stylesheet_link_tag "devise_pages", "data-turbo-track": "reload" %>


<div class="lifeline-form">
  <div class="login-form">
    <div class="left-side">
      <h2 class="form-title">Lifeline Login</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, class: "remember-me", as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn-signup full-width" %>
        </div>
      <% end %>
  </div>
    <div class="side-image" style="background-image: url('<%= image_url('design.png') %>')">
    </div>
  </div>

  <%= render "devise/shared/links" %>
</div>
