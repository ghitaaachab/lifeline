
<div class="mf-container" >
 <h1>  <img src="/assets/patient sheet.png"> Patient sheet </h1>
 <%= form_with(model:  @patient_sheet, url: patient_sheet_index_path, method: :post) do |form| %>
 <div class="mf-infos">
  <div>
    <%= form.label :blood_type, 'blood type *', class: "label" %>
    <%= form.select :label, [['A+', 'A+'], ['A-', 'A-'], ['B+', 'B+'], ['B-', 'B-'], ['AB+', 'AB+'], ['AB-', 'AB-'], ['O+', 'O+'], ['O-', 'O-']], {}, { class: 'in-range' } %>
  </div>

  <div>
     <%= form.label :height, 'Height (cm)*', class: "label" %>
    <%= form.number_field :value, class: 'in-range' %>
  </div>

  <div>
    <%= form.label :weight, 'Weight (kg)*' , class: "label"%>
    <%= form.number_field :value, class: 'in-range' %>
  </div>
 </div>
  <div>
    <%= form.label :family_history, 'Family history *'  %>
    <%= form.text_field :value, class: 'input' %>
  </div>

  <div>
    <%= form.label :surgical_history,  'Surgical history' %>
    <%= form.text_field :value, class: 'input' %>
  </div>

  <div>
    <%= form.label :current_dr,  'Current doctor ' %>
    <%= form.text_field :value, class: 'input' %>
  </div>

  <div>
    <%= form.label :current_tt,  'Current treatment ' %>
    <%= form.text_field :value, class: 'input' %>
  </div>
   <div class="mf-allergies">
       <h2>Allergies</h2>
        <%= form.fields_for :allergies do |allergy_form| %>
        <%= allergy_form.label :type, 'Allergy type' %>
      <%= allergy_form.text_field :type, class: 'allergy-input' %>
      <button type="button" class="add-allergy">Add another allergy</button>
      <br>
       <% end %>
  </div>

  <div class="mf-diseases">
    <h2>Diseases</h2>
    <%= form.fields_for :diseases do |disease_form| %>
      <%= disease_form.label :name, 'Disease name' %>
      <%= disease_form.text_field :name, class: 'disease-input' %>
      <button type="button" class="add-disease">Add another disease</button>
      <br>
       <% end %>
  </div>

  <div>
    <%= form.label :emergency_contact_name , 'Emergency contact name ' %>
    <%= form.text_field :value, class: 'input' %>
  </div>

  <div>
    <%= form.label :emergency_contact_number , 'Emergency contact number ' %>
    <%= form.text_field :value, class: 'input' %>
  </div>

  <div>
    <%= form.submit 'Add ', class: 'btn btn-primary' %>
  </div>
 <% end %>
</div>
