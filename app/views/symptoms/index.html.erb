<div class="medicines-container">

<h1 style="color: white; font-size: 28px;" class="mb-5">Symptoms</h1>
<div class="symptoms-form">
  <%= form_with(model: @new_symptom, url: symptoms_path, method: :post, remote: true) do |form| %>
    <div class="cont" data-controller="controller">
      <div class="field">
        <%= form.label :description, class: "lab1" , id:"#txt" %>
        <%= form.text_field :description, class: "inp", placeholder: "Fever" ,id:"input"%>
      </div>

      <div class="field">
        <%= form.label :start_date, class: "lab" %>
        <%= form.datetime_local_field :start_date, class: "inp", id: "date-started" %>
      </div>

      <div class="field">
        <%= form.label :end_date, class: "lab" %>
        <%= form.datetime_local_field :end_date, class: "inp", id: "date-finished" %>
      </div>

      <div class="actions">
        <%= form.submit "Add", class: "add-medicine", id: "submit" %>
      </div>
    </div>
  <% end %>
</div>
<ul>
  <% @symptoms.reverse_each do |symptom| %>
    <li class="symptom-li">
      <div id="symptom_<%= symptom.id %>">
        <span class="symptom-description">Experienced <strong><%= symptom.description %></strong></span>
        <span class="symptom-date">from: <strong><%= symptom.start_date %></strong></span>
        <span class="symptom-date">to: <strong><%= symptom.end_date %></strong></span>
      </div>
      <div class="symptom-actions">
        <%= form_with(model: symptom, url: symptom_path(symptom), method: :delete, remote: true, class: "delete-form") do |delete_form| %>
          <%= delete_form.submit "Delete", class: "delete-link", onclick: "return confirm('Are you sure?');" %>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>

</div>
