<!-- app/views/medicines/_form.html.erb -->

<%= form_with(model: @medicine, url: medicines_path, method: :post, remote: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.datetime_local_field :start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.datetime_local_field :end_date %>
  </div>

  <div class="field">
    <%= form.label :notes %>
    <%= form.text_area :notes %>
  </div>

  <div class="actions">
    <%= form.submit "Add", class: "btn" %>
  </div>
<% end %>
